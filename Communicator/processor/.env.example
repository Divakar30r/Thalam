API_GOOGLE_CHAT_URL=http://localhost:8006
API_GOOGLE_BOT_URL=http://localhost:8007

# gRPC Server Configuration
# Use 0.0.0.0 to allow connections from any interface (recommended for containers/remote)
# Use 127.0.0.1 or localhost for local-only development
GRPC_SERVER_HOST=0.0.0.0
GRPC_SERVER_PORT=50051

# FastAPI Server Configuration
FASTAPI_HOST=localhost
FASTAPI_PORT=8005

# Business Logic Configuration
FIND_MAX_SEL=10
ORDER_EXPIRY_MINUTES=30

# AWS MSK Configuration
AWS_MSK_BOOTSTRAP_SERVERS=localhost:9092
